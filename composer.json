{
	"name": "brotkrueml/schema-generator",
	"type": "typo3-cms-extension",
	"description": "Generator for classes and viewhelpers for the TYPO3 schema extension",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Chris MÃ¼ller",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=8.0",
        "ext-ctype": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
		"symfony/console": "^5.2",
		"symfony/polyfill-php81": "^1.22",
		"twig/twig": "^3.3"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.18",
		"phpunit/phpunit": "^9.5",
		"typo3/coding-standards": "^0.3"
	},
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer":  "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php80": "*"
    },
	"autoload": {
		"psr-4": {
			"Brotkrueml\\SchemaGenerator\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brotkrueml\\SchemaGenerator\\Tests\\": "tests/"
		}
	},
	"config": {
		"sort-packages": true
	},
	"scripts": {
		"fix-cs": "vendor/bin/php-cs-fixer fix"
	}
}

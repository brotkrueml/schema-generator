{
	"name": "brotkrueml/schema-generator",
	"type": "typo3-cms-extension",
	"description": "Generator for classes and viewhelpers for the TYPO3 schema extension",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Chris MÃ¼ller",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=8.4",
		"ext-ctype": "*",
		"ext-intl": "*",
		"ext-mbstring": "*",
		"monolog/monolog": "^3.9",
		"php-di/php-di": "^7.1",
		"symfony/console": "^7.3",
		"twig/twig": "^3.21"
	},
	"require-dev": {
        "brotkrueml/coding-standards": "~6.2.0",
		"phpunit/phpunit": "^12.4"
	},
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer":  "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php81": "*"
    },
	"autoload": {
		"psr-4": {
			"Brotkrueml\\SchemaGenerator\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brotkrueml\\SchemaGenerator\\Tests\\": "tests/"
		}
	},
	"config": {
		"sort-packages": true
	}
}

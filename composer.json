{
	"name": "brotkrueml/schema-generator",
	"type": "typo3-cms-extension",
	"description": "Generator for classes and viewhelpers for the TYPO3 schema extension",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Chris MÃ¼ller",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=8.1",
        "ext-ctype": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
		"symfony/console": "^6.3",
		"twig/twig": "^3.7"
	},
	"require-dev": {
        "brotkrueml/coding-standards": "~5.0.0",
		"phpunit/phpunit": "^10.3"
	},
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer":  "*",
        "symfony/polyfill-mbstring": "*"
    },
	"autoload": {
		"psr-4": {
			"Brotkrueml\\SchemaGenerator\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brotkrueml\\SchemaGenerator\\Tests\\": "tests/"
		}
	},
	"config": {
		"sort-packages": true
	},
	"scripts": {
		"fix-cs": "vendor/bin/php-cs-fixer fix"
	}
}
